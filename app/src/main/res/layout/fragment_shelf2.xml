<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.ShelfFragment2">

    <ImageView
        android:id="@+id/iv_plant_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:src="@drawable/ic_sample_plant" />

    <TextView
        android:id="@+id/tv_plant_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_plant_image"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        tools:text="Plant Name" />

    <TextView
        android:id="@+id/tv_plant_scientific_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_plant_name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        tools:text="Scientific Name" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_shelf2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/bt_remove_plant"
        android:layout_below="@+id/tv_personal_plant_care_notes"
        android:layout_marginTop="0dp" />

    <Button
        android:id="@+id/bt_remove_plant"
        android:layout_width="137dp"
        android:layout_height="80dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="53dp"
        android:layout_marginBottom="12dp"
        android:drawableLeft="@drawable/ic_clear"
        android:text="Remove from shelf" />

    <Button
        android:id="@+id/bt_shelf"
        android:layout_width="137dp"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="34dp"
        android:layout_marginBottom="12dp"
        android:layout_toEndOf="@+id/bt_remove_plant"
        android:drawableLeft="@drawable/ic_medical_services"
        android:text="Plant Doctor" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tv_personal_plant_care_notes"
        android:layout_width="173dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_plant_scientific_name"
        android:layout_alignParentStart="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:layout_toStartOf="@+id/bt_save_plant_care_notes">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_personal_plant_care"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/PersonalPlantCareNotes" />
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/bt_save_plant_care_notes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/rv_shelf2"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="0dp"
        android:text="@string/Save" />


</RelativeLayout>
